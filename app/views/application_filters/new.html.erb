<h1><%= ts 'new.record', :what => ApplicationFilter.model_name.human.titleize %></h1>
<%= form_for(:filter, :url => application_filters_path) do |f| %>
<%=   f.error_messages %>
  <p>
    <%= ApplicationFilter.model_name.human.titleize.s %><br />
    <%= f.text_field :title %>
  </p>
  <p>
   <%= globalized_submit_tag 'creat.e.this' %>
  </p>
<% end %>
<p>&nbsp;<br/>
<%= link_to ts('cancel.record', :what => t('new.this')), application_filters_path %> |
<%= render :partial => 'main/back_to_admin_or_media' %></p>