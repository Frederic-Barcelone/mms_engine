<h1><%= ts 'list.ing.records', :what => ApplicationFilter.human_name.titleize %></h1>

<table table border="1" class="normal">
  <tr>
    <th><%= ApplicationFilter.human_name.titleize.s %></th>
  </tr>
<% can_edit = authorized? hash_for_edit_application_filter_path
   for filter in @filters %>
  <tr>
    <td><%= link_to(h(filter.title), can_edit ? edit_application_filter_path(filter) : application_filter_path(filter)) %></td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% authorized_only hash_for_new_application_filter_path do %>
<%=  link_to ts('new.record', :what => ApplicationFilter.human_name), new_application_filter_path %> |
<% end %>
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>