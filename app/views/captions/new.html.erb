<% caption_title = @medium.class.human_attribute_name('caption') %>
<h1><%= ts :for, :what => t('new.record', :what => caption_title), :whom => "#{Medium.human_name.titleize} #{@medium.id}" %></h1>
<%= error_messages_for :caption %>
<% form_for(:caption, :url => medium_captions_path(@medium)) do |f| %>
<%= render :partial => 'form', :locals => {:f => f, :caption_title => caption_title} %>
   <p>
    <%= globalized_submit_tag 'create.this' %>
   </p>
<% end %>
<p>&nbsp;<br/>
<%= render :partial => 'media/back_to_edit', :locals => {:anchor => 'captions'} %></p>