<p>
<%= link_to_remote(ts('results.previous'), :url => media_searches_path(pagination_params.merge({ :page => medium_pages.current.previous })), :method => :get, :update => 'secondary') if medium_pages.current.previous %>
<%= pagination_links_each(medium_pages, {}) { |n| link_to_remote(n.to_s, :url => media_searches_path(pagination_params.merge({ :page => n })), :method => :get, :update => 'secondary') } %>
<%= link_to_remote(ts('results.next'), :url => media_searches_path(pagination_params.merge({ :page => medium_pages.current.next })), :method => :get, :update => 'secondary') if medium_pages.current.next %>
