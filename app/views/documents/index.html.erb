<h1><%= ts 'list.ing.records', :what => Document.human_name(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
  </tr>
<% for document in @documents %>
  <tr>
    <td><%= link_to ts(:show), document_path(document) %></td>
    <td><%= link_to ts('edit.this'), edit_document_path(document) %></td>
    <td><%= link_to ts('delete.this'), document_path(document), :confirm => te('delete.confirmation'), :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
