<h1><%= ts('list.ing.records', :what => CopyrightHolder.human_name(:count => :many).titleize) %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= CopyrightHolder.human_name.titleize.s %></th>
    <th><%= CopyrightHolder.human_attribute_name('website').s %></th>
  </tr>
<% can_edit = authorized? hash_for_edit_copyright_holder_path
   for copyright_holder in @copyright_holders %>
  <tr>
    <td>
<%  if can_edit %>
<%=   link_to h(copyright_holder.title), edit_copyright_holder_path(copyright_holder) %>
<%  else %>
<%=   link_to h(copyright_holder.title), copyright_holder_path(copyright_holder) %>
<%  end %>
	</td>
	<td>
<%= copyright_holder.website %>
	</td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% authorized_only hash_for_new_copyright_holder_path do %>
<%=  link_to ts('new.record', :what => CopyrightHolder.human_name), new_copyright_holder_path %> |
<% end %>
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>