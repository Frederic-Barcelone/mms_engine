<%  screen_size_image = @medium.screen_size_image
    #image_tag = image_tag(screen_size_image.public_filename, :width => screen_size_image.width, :height => screen_size_image.height)
 	large_image = @medium.large_image
    # Temporarily using the huge image and scaling it down with CSS to avoid regenerating all of the screen_size images
    image_tag = image_tag(screen_size_image.public_filename, :style => "max-width: 550px; max-height: 350px;")
	div_id = "media_large_#{@medium.id}" %>
<div id="<%= div_id %>">
<%  #screen_size_image.nil? ? image_tag : link_to(image_tag, full_size_medium_path(@medium), {:class => 'media-thumb overflow-x-auto thl-pop no-view-alone no-main-site-ajax padding-10 width-1000'}) %>
<%= large_image.nil? ? image_tag : link_to_function(image_tag, "$(\"#TB_window\").remove(); $(\".thl-popup\").remove(); $(\"body\").append(\"<div id='TB_window'></div>\");	tb_show(null, \"#{large_image.public_filename}\", false);") %>
</div>
<% #javascript_tag "ActivateThlPopups('##{div_id}')" %>