<style type="text/css" media="screen">
	#mobj td { padding: 5px; font-family: verdana, arial, sans-serif; color:#404040; font-size:9pt;}
</style>
<h1><%= ts 'associate.record', :what => 'Topic', :whom => "#{Medium.human_name.titleize} #{@medium.id}" %></h1>
<%= error_messages_for :media_category_association %>
<% form_for(:media_category_association, :url => @topic.nil? ? medium_topic_associations_path(@medium) : associations_path(@medium, @topic)) do |f| %>
<table id='mobj' border="0" cellspacing='0'>
	<%=  render :partial => 'form', :locals => {:f => f} %>
	<tr>
		<td></td>
		<td><%= globalized_submit_tag 'create.this', :style => 'margin-top:8px;' %> &nbsp;<p style='font-size:8pt;margin-left:15px;display:inline'><%= render :partial => 'media/back_to_edit', :locals => {:anchor => 'topics'} %></p></td>
	</tr>
</table>
<% end %>