<h1><%= ts 'list.ing.records', :what => Country.human_name(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= Country.human_name.titleize.s %></th>
	<th><%= AdministrativeLevel.human_name(:count => :many).titleize.s %></th>
	<th><%= AdministrativeUnit.human_name(:count => :many).titleize.s %></th>
  </tr>
<% for @country in @countries %>
  <tr>
    <td>
<%=   link_to h(@country.title).s, country_path(@country) %>
    </td>
	<td>
<%=   link_to ts('manage.record', :what => AdministrativeLevel.human_name(:count => :many)), country_administrative_levels_path(@country) %>
	</td>
    <td>
<%=   link_to ts('manage.record', :what => AdministrativeUnit.human_name(:count => :many)), country_administrative_units_path(@country) %>
    </td>
<%  not_base_language do %>
      <td><%= link_to ts('translat.e'), edit_country_path(@country) %></td>
<%  end %>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% base_language_only do
     authorized_only(hash_for_new_country_path) do %>
<%=    link_to ts('new.record', :what => Country.human_name), new_country_path %> |
<%   end
   end %>
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>