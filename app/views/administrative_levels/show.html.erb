<%= display_if_not_blank AdministrativeLevel.human_attribute_name('title').s, h(@administrative_level.title).s %>
<%= display_if_not_blank Country.human_name.titleize.s, link_to(h(@country.title).s, country_path(@country)) %>
<%= display_if_not_blank AdministrativeLevel.human_attribute_name('level').s, h(@administrative_level.level) %>
<p>&nbsp;<br/>
<% authorized_only hash_for_country_administrative_level_path do %>
<%=  link_to ts('edit.this'), edit_country_administrative_level_path(@country, @administrative_level) %> |
<% end
   authorized_only hash_for_country_administrative_level_path(:action => 'destroy') do %>
<%=  link_to ts('delete.this'), country_administrative_level_path(@country, @administrative_level), :confirm => te('delete.confirmation'), :method => :delete %> |
<% end %>
<%= link_to (ts('back.to_in', :what => AdministrativeLevel.human_name(:count => :many), :where => h(@country.title)), country_administrative_levels_path(@country)) %> |
<%= link_to (ts('back.to', :what => h(@country.title)), country_path(@country)) %> |
<%= render :partial => 'main/back_to_admin_or_media' %>
