<h1><%= ts('list.ing.in', :what => AdministrativeLevel.human_name(:count => :many).titleize, :where => link_to(h(@country.title), country_path(@country))) %></h1>

<table border="1" class="normal">
  <tr>
    <th><%= AdministrativeLevel.human_attribute_name('level').s %></th>
    <th><%= AdministrativeLevel.human_name.titleize.s %></th>
  </tr>  
<% can_edit = authorized? hash_for_edit_country_administrative_level_path
   for administrative_level in @administrative_levels %>
  <tr>
    <td><%=h administrative_level.level %></td>
    <td>
<%  if can_edit %>
<%=   link_to h(administrative_level.title), edit_country_administrative_level_path(@country, administrative_level) %>
<%  else %>
<%=   link_to h(administrative_level.title), country_administrative_level_path(@country, administrative_level) %>
<%  end %>
	</td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% authorized_only hash_for_new_country_administrative_level_path do %>
<%=  link_to ts('new.record', :what => AdministrativeLevel.human_name), new_country_administrative_level_path(@country) %> |
<% end %>
<%= link_to ts('back.to', :what => h(@country.title)), country_path(@country) %> |
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>