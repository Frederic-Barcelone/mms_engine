<h1><%= ts 'new.record', :what => Status.human_name.titleize %></h1>

<% form_for(@status) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= Status.human_attribute_name('title').s %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= Status.human_attribute_name('description').s %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= Status.human_attribute_name('position').s %><br />
    <%= f.text_field :position %>
  </p>
  <p>
   <%= globalized_submit_tag 'create.this' %>
  </p>
<% end %>
<p>&nbsp;<br/>
<%= link_to ts('cancel.record', :what => t('new.this')), statuses_path %> |
<%= render :partial => 'main/back_to_admin_or_media' %></p>