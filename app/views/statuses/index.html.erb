<h1><%= ts 'list.ing.records', :what => Status.model_name.human(:count => :many).titleize %></h1>

<table border="1" class="normal">
  <tr>
    <th><%= Status.model_name.human.titleize.s %></th>
    </tr>
<% can_edit = authorized? hash_for_edit_status_path
   for status in @statuses %>
  <tr>
    <td><%= link_to(h(status.title), can_edit ? edit_status_path(status) : statuses_path) %></td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% if authorized? hash_for_new_status_path %>
<%=  link_to ts('new.record', :what => Status.model_name.human), new_status_path %> |
<% end %>
<%= render :partial => 'main/back_to_admin_or_media' %>
</p>