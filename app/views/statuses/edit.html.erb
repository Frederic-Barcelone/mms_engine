<h1><%= ts 'edit.ing.record', :what => Status.human_name.titleize %></h1>
<% form_for(@status) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= globalized_submit_tag 'update.this' %>
  </p>
<% end %>

<td><%= link_to 'Delete', @status, :confirm => 'Are you sure?', :method => :delete %></td> |
<%= link_to ts('back.to', :what => t(:all, :what => Status.human_name(:count => :many))), statuses_path %> |
<%= render :partial => 'main/back_to_admin_or_media' %>