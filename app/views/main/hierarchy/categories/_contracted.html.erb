<%= Util::MARGIN * margin_depth %>
<%  element_path = "#{controller.controller_name.singularize}_path"
    contracted_div = "#{contracted.id}_div"
    if contracted.children.empty? %>
      &#9674;
<%  else %>
<%=   link_to_remote '+', { :update => contracted_div, :url => self.send("expand_#{element_path}", contracted, :margin_depth => margin_depth), :method => 'get' }, { :class => 'collapsable' } %>
<%  end %>
<%= "#{link_to_remote h(contracted.title).s, :url => self.send(element_path, contracted, :margin_depth => margin_depth), :method => 'get', :loading => loading_animation_script(contracted_div), :loaded => reset_animation_script(contracted_div) } (#{contracted.count_inherited_media})" %><br/>