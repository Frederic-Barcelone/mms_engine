<% title =  Citation.human_name.titleize %>
<h1><%= ts :in, :what => t(:for, :what => title, :what => Citation.human_name.capitalize, :whom => @reference.title), :where => "#{Medium.human_name.titleize} #{@medium.id}" %></h1>
<p><%= thumbnail_image_link(@medium) %></p>
<%  medium = @citation.medium
    if !medium.nil? %>
      <p><b><%= Citation.human_attribute_name('medium_id').s %>:</b> <%= medium.id %>
<%=   thumbnail_image_link(medium) %></p>
<%    titles = medium.titles 
      if !titles.empty? %>
<%=     render :partial => 'titles/index', :locals => {:titles => titles} %>
<%    end 
    end %>
<%= display_if_not_blank Citation.human_attribute_name('page_number'), @citation.page_number %>
<%= display_if_not_blank Citation.human_attribute_name('page_side'), h(@citation.page_side) %>
<%= display_if_not_blank Citation.human_attribute_name('line_number'), @citation.line_number %>
<p><b>Note:</b></p>
<%=h @citation.note %>
<p>&nbsp;<br/>
<%  authorized_only @reference.class==Title ? hash_for_edit_medium_title_citation_path : hash_for_edit_medium_title_translated_title_citation_path do %>
<%= link_to 'Edit', @reference.class==Title ? edit_medium_title_citation_path(@medium, @reference, @citation) : edit_medium_title_translated_title_citation_path(@medium, @title, @reference, @citation) %> |
<% end %>
<%= render :partial => 'persistent_links' %>
</p>