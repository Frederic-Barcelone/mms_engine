<h1><%= ts(:for, :what => t('list.ing.records', :what => Citation.human_name.capitalize), :whom => @reference.title) %></h1>
<p><%= thumbnail_image_link(@medium) %></p>
<table border="1">
  <tr>
    <th><%= Citation.human_attribute_name('medium_id').s %></th>
    <th><%= Citation.human_attribute_name('Page_Number').s %></th>
    <th><%= Citation.human_attribute_name('Page_Size').s %></th>
    <th><%= Citation.human_attribute_name('Line_Number').s %></th>
    <th><%= Citation.human_attribute_name('Note').s %></th>
        <th><%= ts :options %></th>
 </tr>

<% @citations.each do |citation| %>
  <tr>
    <td><%=h citation.medium_id %></td>
    <td><%=h citation.page_number %></td>
    <td><%=h citation.page_side %></td>
    <td><%=h citation.line_number %></td>
    <td><%=h citation.note %></td>
    <td><%= link_to ts('manage.this'), @reference.class == Title ? medium_title_citation_path(@medium, @reference, citation) : medium_title_translated_title_citation_path(@medium, @title, @reference, citation) %></td>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% authorized_only hash_for_new_medium_title_path do %>
<%=  link_to ts(:for, :what => t('new.record', :what => Citation.human_name), :whom => @reference.class.human_name), new_medium_title_citation_path(@medium) %> |
<% end %>
<%= render :partial => 'media/back_to_edit', :locals => {:anchor => 'titles'} %>
</p>