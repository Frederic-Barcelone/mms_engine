<b><%= ts(:for, :what => Affiliation.human_name.titleize, :whom => "#{Medium.human_name.titleize} #{@medium.id}") %></b>
<p>
<%= thumbnail_image_link(@medium) %>
</p>
<% sponsor = @affiliation.sponsor 
   if !sponsor.nil? %>
<%=  display_if_not_blank Sponsor.human_name.titleize.s, h(sponsor.title).s %>
<% end %>
<%= display_if_not_blank Organization.human_name.titleize.s, h(@affiliation.organization.title).s %>
<% project = @affiliation.project 
   if !project.nil? %>
<%=  display_if_not_blank Project.human_name.titleize.s, h(project.title).s %>
<% end %>
<p>&nbsp;<br/>
<% authorized_only hash_for_edit_medium_affiliation_path do %>
<%=  link_to ts('edit.this'), edit_medium_affiliation_path(@medium, @affiliation) %> |
<% end %>
<%= render :partial => 'persistent_links' %>
</p>